#include <iostream>
using namespace std;
int main()
{
   int players=5;
   int matches=3;
   cout<<"---------Match Record---------"<<endl;
   int runs[players][matches]={{32,34,45},{34,76,89},{34,90,23},{23,76,84},{21,56,76}};
  int highest_runs=0;
  int total_runs=0;
  cout<<"-------------Run Records-----------"<<endl;
  for(int i=0;i<players; i++){
      for(int j=0; j<matches; j++){
          cout<<runs[i][j]<<"  ";
      }
      cout<<endl;
  }
  cout<<"Now We showing Players with Runs "<<endl;
  int best_player=0;
  //totol per players runs//
  for(int i=0; i<players; i++){
      total_runs=0;                   ///ye wala main point hai mera jo  bar bar ghalti karta hon
      for(int j=0; j<matches; j++){
          total_runs+=runs[i][j]; // total runs calculate karta hai//
      }
      cout<<"plyer   "<<i+1<<"   Total Runs Are   "<<total_runs<<endl;
      if(total_runs>highest_runs){
          
          highest_runs=total_runs;
          
          best_player=i+1;
          
      }
      

  }
  cout<<"-------------------------------------"<<endl;
  cout<<"Which Plyer is best performance is good:"<<endl;
  cout<<"-------------------------------------"<<endl;
  cout<<"The best plyers is  "<<best_player<<"   and the highest_runs 0r Scoreis   "<<total_runs;
  return 0;
}
