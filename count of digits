
#include <iostream>
using namespace std;
    int count_number(int x){
        int sum=0;;
        while(x>0){
        int digit=x%10;
        x/=10;
        sum+=digit;
        }
        return (sum);
    }
    int main(){
        int a;
        cout<<"Enter Your Number :";
        cin>>a;
        int change_number=count_number(a);
        cout<<"Sum of digits is =:"<<change_number;
        return 0;
    }
